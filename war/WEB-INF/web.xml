<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>HighScore</servlet-name>
    <servlet-class>com.clouby.bumpball.server.HighScoreServlet</servlet-class>
  </servlet>
  
  <servlet>
     <servlet-name>HighScoreCleanUp</servlet-name>
    <servlet-class>com.clouby.bumpball.server.HighScoreCleanupServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>HighScore</servlet-name>
    <url-pattern>/highscore</url-pattern>
  </servlet-mapping>
  
  
   <servlet-mapping>
    <servlet-name>HighScoreCleanUp</servlet-name>
    <url-pattern>/highscorecleanup</url-pattern>
  </servlet-mapping>
  
  <security-constraint>
    <web-resource-collection>
        <web-resource-name>cron</web-resource-name>
        <url-pattern>/highscorecleanup</url-pattern>
    </web-resource-collection>
    <auth-constraint>
        <role-name>admin</role-name>
    </auth-constraint>
</security-constraint>
   

</web-app>